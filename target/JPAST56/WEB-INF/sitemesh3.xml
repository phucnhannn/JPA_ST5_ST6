<?xml version="1.0" encoding="UTF-8"?>

<sitemesh>
	<!-- Admin area decorator (more specific first) -->
	<mapping path="/admin/*" name="admin" decorator="admin.jsp" />

	<!-- Manager area decorator (more specific first) -->
	<mapping path="/manager/*" name="manager" decorator="manager.jsp" />

	<!-- Public site decorator (catch-all last) -->
	<mapping path="/*" name="web" decorator="web.jsp" />

	<!-- Exclude paths from decoration -->
	<mapping path="/api*" exclude="true" />
	<mapping path="/login*" exclude="true" />
	<mapping path="/uploads/*" exclude="true" />
</sitemesh>